{
  "name": "api-territoires",
  "version": "1.0.0",
  "description": "API publique des territoires français (régions, départements, communes, EPCI)",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3020",
    "build": "next build",
    "start": "next start -p 3020",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "import:geo": "tsx scripts/import-geo-territoires.ts",
    "import:index": "tsx scripts/index-territoires.ts",
    "seed": "tsx scripts/seed.ts",
    "backup": "bash scripts/backup.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/leaflet": "^1.9.21",
    "bcryptjs": "^2.4.3",
    "exceljs": "^4.4.0",
    "ioredis": "^5.9.2",
    "jose": "^5.2.0",
    "leaflet": "^1.9.4",
    "next": "^15.5.12",
    "pino": "^10.3.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.12",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "postcss": "^8.4.32",
    "prettier": "^3.8.1",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
